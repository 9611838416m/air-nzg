<h1>Sign up for AirNZG</h1>

<form action="<%= users_url %>" method="POST" class="user-form"
	    enctype="multipart/form-data">
  <%= auth_token %>

  <input type="text"
         name="user[email]"
         id="user-email"
         value="<%= @user.email %>">
  <label for="user-email">Email</label>


  <input type="password" name="user[password]" id="user-password">
  <label for="user-password">Password</label>


  <input type="text"
         name="user[fname]"
         id="user-fname"
         value="<%= @user.fname %>">
  <label for="user-fname">First Name</label>


  <input type="text"
         name="user[lname]"
         id="user-lname"
         value="<%= @user.lname %>">
  <label for="user-lname">Last Name</label>
  <br>

  <button>Sign Up</button>
</form>

<a href="/auth/facebook" class="facebook-auth">Or sign up with Facebook!</a>