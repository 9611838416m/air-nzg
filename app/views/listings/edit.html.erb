<h1>Update your Listing</h1>

<form action="<%= listing_url(@listing) %>" method="POST">
  <%= auth_token %>

  <input type="hidden" name="_method" value="PATCH">

  <label for="listing-room-type">Type of Room</label>
  <select name="listing[room_type]" id="listing-room-type">
    <option value="shared" <%="selected" if @listing.room_type == "shared" %>>
      Shared Room
    </option>
    <option value="private" <%="selected" if @listing.room_type == "private" %>>
      Private Room
    </option>
    <option value="whole" <%="selected" if @listing.room_type == "whole" %>>
      Whole Place
    </option>
  </select>
  <br>

  <label for="listing-city">City</label>
  <input type="text" name="listing[city]" value="<%= @listing.city %>"
         id="listing-city" list="cities">
  <datalist id="cities">
    <option value="New York, United States">
    <option value="Chicago, United States">
    <option value="Los Angeles, United States">
    <option value="Tokyo, Japan">
  </datalist>
  <br>

  <label for="listing-title">Title</label>
  <input type="text" name="listing[title]" value="<%= @listing.title %>"
         id="listing-title">

  <hr>

  *Unavailable Date Range:
  <label for="listing-start">Start Date</label>
  <input type="date" name="listing[unavail_start]" id="listing-start">

  <label for="listing-end">End Date</label>
  <input type="date" name="listing[unavail_end]" id="listing-end">
  <br>
  <small>*By default, your listing is always available. Enter two dates here to mark a range as unavailable.</small>
  <br>

  <label for="listing-price">Base Price</label>
  <input type="text" name="listing[price]" value="<%= @listing.price %>"
         id="listing-price">
				 
	<hr>
				 
	<label for="listing-address">*Address</label>
	<input type="text" name="listing[address]" value="<%= @listing.address %>"
				 id="listing-address">
				 
	<small>*Your address will never be shared with other users.</small>

  <hr>
  <button>Update Listing</button>

</form>